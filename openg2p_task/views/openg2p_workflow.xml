<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="openg2p_workflow_form_view">
            <field name="name">openg2p.workflow.form</field>
            <field name="model">openg2p.workflow</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
<!--                            <field name="name" string="Workflow Name"/>-->
                            <field name="workflow_type" string="Workflow Type"/>
                            <field name="curr_workflow_stage" string="Current Workflow Stage"/>
                            <field name="workflow_completed" string="Workflow Completed"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record model="ir.ui.view" id="openg2p_workflow_tree_view">
            <field name="name">openg2p.workflow.tree</field>
            <field name="model">openg2p.workflow</field>
            <field name="arch" type="xml">
                <tree>
<!--                    <field name="name"/>-->
                    <field name="workflow_type"/>
                    <field name="curr_workflow_stage"/>
                    <field name="workflow_completed"/>
                </tree>
            </field>
        </record>

        <!-- Kanban View -->
        <record model="ir.ui.view" id="openg2p_workflow_kanban_view">
            <field name="name">openg2p.workflow.kanban</field>
            <field name="model">openg2p.workflow</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_registration">
<!--                    <field name="name"/>-->
                    <field name="workflow_type"/>
                    <field name="curr_workflow_stage"/>
                    <field name="workflow_completed"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
<!--                                                <field name="name"/>-->
                                            </strong>
                                        </div>
                                    </div>
                                    <div>
                                        <field name="workflow_type"/>
                                    </div>
                                    <div>
                                        <field name="curr_workflow_stage"/>
                                    </div>
                                    <div>
                                        <field name="workflow_completed"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>