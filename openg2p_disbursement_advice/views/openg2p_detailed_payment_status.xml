<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_openg2p_detailed_payment_status_tree" model="ir.ui.view">
        <field name="name">openg2p.detailed.payment.status.tree</field>
        <field name="model">openg2p.detailed.payment.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="program_id"/>
                <field name="batchId" />
            </tree>
        </field>
    </record>
    <data>
        <record id="view_openg2p_detailed_payment_status_form" model="ir.ui.view">
            <field name="name">openg2p.detailed.payment.status.form</field>
            <field name="model">openg2p.detailed.payment.status</field>
            <field name="arch" type="xml">
                <form string="Payment Status Form">
                    <sheet>
                         <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                         </div>
                        <group>
                            <group name="primary">
                                <field name="program_id" options="{'no_create_edit': True}"/>
                            </group>
                        </group>
                        <group name="secondary">
                            <label for="date_start" string="Period"/>
                            <div name="date">
                                <field name="date_start" class="oe_inline"/> - <field name="date_end"
                                                                                      class="oe_inline"/>
                            </div>
                        </group>
<!--                        <group string="Beneficiaries Payment Status">-->
<!--                            <field name="all_beneficiaries" nolabel="1">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="acc_holder_name"/>-->
<!--                                    <field name="amount"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </group>-->
                    </sheet>
                </form>
            </field>
        </record>
    </data>
     <record id="view_openg2p_detailed_payment_status_kanban" model="ir.ui.view">
        <field name="name">openg2p.detailed.payment.status.kanban</field>
        <field name="model">openg2p.detailed.payment.status</field>
        <field name="arch" type="xml">
            <kanban default_group_by="program_id">
                <field name="name"/>
                <field name="program_id"/>
                <field name="batchId"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_openg2p_batch_kanban">
                            <t>
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><li>Name: <field name="name"/></li></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Program : <field name="program_id"/></li>
                                    <li>Batch ID : <field name="batchId"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>